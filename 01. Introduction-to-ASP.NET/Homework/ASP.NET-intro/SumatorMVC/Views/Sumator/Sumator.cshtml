<h2>@ViewBag.Message</h2>
<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <form id="calculatorForm" method="post">
                <div class="row">
                    <div class="form-group">
                        <label for="firstNumber">Enter first number</label>
                        <input type="text" name="firstNumber" value="@ViewBag.firstNumber"/>
                    </div>
                    <div class="form-group">
                        <label for="secondNumber">Enter second number</label>
                        <input type="text" name="secondNumber" value="@ViewBag.secondNumber" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Calculate" class="btn btn-success" />
                    </div>
                </div>
                <div class="row">
                    Result: <span>@ViewBag.Sum</span>
                </div>
            </form>
        </div>
    </div>
</div>
